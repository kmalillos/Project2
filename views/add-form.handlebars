<div class="vertical-center" id="index-page">

    <h1>DoJo:</h1>
    <h3>Doggy Journal</h3>


    <br>
    <hr><br>

    {{!-- SECTION --}}

    {{#if petInfo}}
    <form id="addPetInfo">
        <div class="form-group">
            <!-- Pet Name -->
            <label for="petName">Pet Name</label>
            <input type="text" class="form-control" id="petName" name="petName" placeholder="Pet Name">
        </div>

        <div class="form-group">
            <!-- Breed -->
            <label for="breed">Breed</label>
            <input type="text" class="form-control" id="breed" name="breed" placeholder="Breed">
        </div>

        <div class="form-group">
            <!-- Weight -->
            <label for="weight">Weight (in pounds)</label>
            <input type="text" class="form-control" id="weight" name="weight" placeholder="Weight">
        </div>

        <div class="form-group">
            <!-- Age -->
            <label for="petName">Age (in years)</label>
            <input type="text" class="form-control" id="age" name="age" placeholder="Age">
        </div>

        <input type="submit" value="Submit" class="btn btn-primary">

        <a class="nav-button btn btn-success" href="/home" role="button">
            Home<span class="glyphicon glyphicon-home"></span>
        </a>

    </form>
    {{/if}}

    {{!-- SECTION --}}

    {{#if activityTracker}}
        <form id="addActivity">
            <div class="form-group">
                <!-- Activity Type -->
                <label for="activityType">Activity Type</label>
                <select id="activityType" class="form-control" name="activityType">
                    <option value="Personal">Walk</option>
                    <option value="Business">Run</option>
                    <option value="Business">Dog Park</option>
                    <option value="Business">Day Care</option>
                    <option value="Business">Other</option>
                </select>
            </div>


            <div class="form-group">
                <!-- Start Time -->
                <label for="startTime">Start Time</label>
                <input type="text" class="form-control" id="startTime" name="startTime" placeholder="Start Time">
            </div>

            <div class="form-group">
                <!-- End Time -->
                <label for="endTime">End Time</label>
                <input type="text" class="form-control" id="endTime" name="endTime" placeholder="End Time">
            </div>

            <div class="form-group">
                <!-- Notes -->
                <label for="petName">Notes</label>
                <input type="text" class="form-control" id="notes" name="notes" placeholder="Notes">
            </div>

            <input type="submit" value="Submit" class="btn btn-primary">

            <a class="nav-button btn btn-success" href="/home" role="button">
                Home<span class="glyphicon glyphicon-home"></span>
	        </a>

        </form>
    {{/if}}



</div>